<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PasswordManager.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="PasswordManager.Views.LoginView"
>

	<Grid>
		<StackPanel>
			<ItemsControl ItemsSource="{Binding DecoyMessages}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock FontFamily="Consolas" Foreground="White" FontSize="14" Text="{Binding}" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>

			<StackPanel IsVisible="{Binding RenderInput}" Orientation="Horizontal" Margin="0,10,0,0">
				<TextBlock Text=">_"
                           FontFamily="Consolas"
                           Foreground="White"
                           FontSize="14"/>
				<TextBox x:Name="x"
						 Classes="no-theme"
						 Background="Black"
						 Foreground="Black"
						 BorderBrush="Transparent"
						 CaretBrush="White"
						 FontSize="14"
						 FontFamily="Consolas"
						 IsTabStop="False"
						 BorderThickness="0"
						 Margin="5,0,0,0"
						 PasswordChar="*"/>
			</StackPanel>
		</StackPanel>
	</Grid>

</UserControl>
