<UserControl 
			xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="clr-namespace:PasswordManager.ViewModels"
            x:DataType="vm:LogViewModel"
            x:Class="PasswordManager.Views.LogView"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			mc:Ignorable="d"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			d:DesignWidth="600" d:DesignHeight="300"		 
>
	<StackPanel>
		<Button 
			Background="#5c99fa" 
			HorizontalAlignment="Stretch"
			Height="22"
			Command="{Binding ToggleOpenCommand}"
			Padding="0"
			>
			<Grid ColumnDefinitions="*, *" VerticalAlignment="Center">
				<TextBlock Grid.Column="0" Text="Logs" FontWeight="Bold" FontSize="14" Margin="6,0,0,0" Foreground="Black" />
				<Button Command="{Binding CompletelyCloseCommand}" Grid.Column="1" HorizontalAlignment="Right" Margin="0" Padding="10,0" Content="X"/>
			</Grid>		
		</Button>
		<TextBox
			Height="150"
				IsVisible="{Binding IsOpen}"
				Text="{Binding TextLogs}"
				IsReadOnly="True"
				AcceptsReturn="True"
				BorderThickness="0"
				Background="Transparent"
				Foreground="Black"
				FontFamily="Consolas"
				FontSize="13"
				IsTabStop="False"
				TextWrapping="WrapWithOverflow"
				ScrollViewer.VerticalScrollBarVisibility="Visible"
		/>
	</StackPanel>
	
</UserControl>
